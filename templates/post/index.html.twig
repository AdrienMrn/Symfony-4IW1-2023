{% extends 'base.html.twig' %}

{% block title %}Liste des y{% endblock %}

{% block body %}
    <h1>Liste des y</h1>

    {% for post in posts %}
        {{ post.content }} -
        <em>Créé le {{ post.createdAt|date('d/m/y à H:i') }}</em> <br>
        <a href="{{ path('post_show', {'id': post.id}) }}">Voir</a> <br>
        <a href="{{ path('post_update', {'id': post.id}) }}">Modifier</a> <br>
        <a href="{{ path('post_delete', {'id': post.id, 'token': csrf_token('delete' ~ post.id)}) }}" onclick="confirm('Sur sur ?');">Suppression</a> <br>
        <br>
    {% else%}
        Aucun post
    {% endfor %}
{% endblock %}
